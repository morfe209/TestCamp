
<% include partials/header %>



<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome toYelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <a class="btn btn-primary" href="/campgrounds/new">Add New Campgrounds</a>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
              
               
                <div class="thumbnail">
                    <img src="<%= camp["img"] %>">
                    <div class="figure-caption"> <h4><%= camp["name"] %></h4></div>
                </div>
               
               
            </div>
        <% }); %>
    </div>

        <a href="/">Go Back</a>
</div>
    

